

<form action="/figures/<%=@figure.id%>" method="post">
  <input type="hidden" name="_method" value="patch">

  <ol>
   <li><label for="figure_name"><h2>Update:<%=@figure.name%></h2> </label></li>
    <input type="text" id="figure_name" name="figure[name]" value="<%=@figure.name%>">
  </ol>

  <ol>
      <li> <label>Update: Titles</label> </li>
      <% Title.all.each do |title| %>
      <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" <%='checked' if @figure.titles.include?(title) %> >
      <label> <%= title.name %></label>
    <% end %>
  </ol>


  <ol>
    <li> <label for="">Update: Landmark</label> </li>
      <% Landmark.all.each do |landmark| %>
      <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %> >
      <label><%= landmark.name %></label>
      <% end %>
      <li> <label for="new_landmark">Create a Landmark</label> </li>
      <input type="text" id="new_landmark" name="new_landmark" value="">
  </ol>


  <input type="submit" name="button" value="Edit Figure">
</form>
